<controls:ProWindow 
    x:Class="NCC.PRZTools.RasterToTable"
    x:Name="RasterToTableDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    mc:Ignorable="d"
    Title="Raster To Table"
    Icon="pack://application:,,,/PRZTools;component/ImagesWPF/Table32.png" ShowIconOnTitleBar="True"
    Width="500" MinWidth="400" Height="500" MinHeight="400"
    WindowStartupLocation="CenterOwner"
    ShowMinButton="True" ShowMaxRestoreButton="True" ShowCloseButton="True" ShowTitleBar="True"
    ResizeMode="CanResize"
    >

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <!--Outer Border-->
    <Border
        Margin="5" 
        Padding="5" 
        BorderThickness="1.5"
        BorderBrush="{DynamicResource Esri_BorderBrush}"
        Background="{DynamicResource Esri_DialogFrameBackgroundBrush}">

        <!--Grid Definition-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <!--Inner Border #1-->
            <Border
                Grid.Row="0" 
                Margin="0,0,0,5"
                BorderThickness="1.5"
                BorderBrush="{DynamicResource Esri_BorderBrush}">

                <DockPanel 
                    LastChildFill="False" 
                    Background="{DynamicResource Esri_DialogClientAreaBackgroundBrush}">

                    <TextBlock
                        DockPanel.Dock="Top"
                        Margin="5"
                        Style="{DynamicResource Esri_TextBlockRegular}"
                        Text="Raster" />

                    <DockPanel
                        DockPanel.Dock="Top"
                        LastChildFill="True">

                        <Button 
                            DockPanel.Dock="Left"
                            Margin="0,0,0,5"
                            Command="{Binding CmdSelectRaster}">

                            <StackPanel
                                Orientation="Horizontal">

                                <TextBlock
                                    Margin="5"
                                    Text="Select Raster" />

                                <Image
                                    Margin="5,0"
                                    Source="pack://application:,,,/PRZTools;component/ImagesWPF/Raster16.png"
                                    Stretch="None" />

                            </StackPanel>
                        </Button>

                        <Button
                            DockPanel.Dock="Left"
                            Margin="0,0,0,5"
                            Command="{Binding CmdValidateRaster}"
                            Content="V">

                        </Button>

                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            Style="{DynamicResource Esri_TextBlockRegular}"
                            Foreground="{DynamicResource Esri_TextSelectionHighlightBrush}"
                            Text="{Binding RasterPath}" />

                    </DockPanel>
                    <CheckBox
                        Content="0s are nodata"
                        IsChecked="{Binding ZeroIsNoData_IsChecked}"/>


                </DockPanel>
            </Border>

            <!--Inner Border #2-->
            <Border 
                Grid.Row="1" 
                Margin="0,0,0,5"
                BorderThickness="1.5" 
                BorderBrush="{DynamicResource Esri_BorderBrush}">

                <DockPanel 
                    LastChildFill="False" 
                    Background="{DynamicResource Esri_DialogClientAreaBackgroundBrush}">

                    <TextBlock 
                        DockPanel.Dock="Top"
                        Margin="5" 
                        Style="{DynamicResource Esri_TextBlockRegular}"
                        Text="Specify the Planning Unit ID Field" />

                    <ComboBox 
                        DockPanel.Dock="Top" 
                        Margin="5,3,5,3" 
                        ItemsSource="{Binding IntFields}" 
                        SelectedItem="{Binding SelectedPUIDField}" />

                    <TextBlock
                        DockPanel.Dock="Top"
                        Margin="5"
                        Style="{DynamicResource Esri_TextBlockRegular}"
                        Text="Specify the Cost Field" />

                    <ComboBox 
                        DockPanel.Dock="Top" 
                        Margin="5,3,5,3" 
                        ItemsSource="{Binding NumericFields}" 
                        SelectedItem="{Binding SelectedCostField}" />

                </DockPanel>
            </Border>

            <!--Inner Border #3-->
            <Border 
                Grid.Row="2"
                BorderThickness="1.5" 
                BorderBrush="{DynamicResource Esri_BorderBrush}">

                <DockPanel 
                    LastChildFill="False" 
                    Background="{DynamicResource Esri_DialogClientAreaBackgroundBrush}">

                    <Button 
                        DockPanel.Dock="Left" 
                        Margin="5" 
                        Height="25"
                        MinWidth="75"
                        Padding="5"
                        Style="{DynamicResource Esri_Button}" 
                        Command="{Binding CmdOK}" 
                        CommandParameter="{Binding ElementName=RasterToTableDlg}"
                        IsEnabled="{Binding CmdOKIsEnabled}"
                        Content="OK" />

                    <Button
                        DockPanel.Dock="Right" 
                        Margin="5" 
                        Height="25" 
                        MinWidth="75"
                        Padding="5"
                        Style="{DynamicResource Esri_Button}"
                        Command="{Binding CmdCancel}" 
                        CommandParameter="{Binding ElementName=RasterToTableDlg}"
                        Content="CANCEL" />

                </DockPanel>
            </Border>
        </Grid>
    </Border>
</controls:ProWindow>
