<controls:ProWindow
    x:Class="NCC.PRZTools.PlanningUnits"
    x:Name="PlanningUnitsDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    mc:Ignorable="d"
    Title="Planning Unit Generator"
    Height="500" Width="500" MinHeight="400" MinWidth="400"
    Icon="pack://application:,,,/PRZTools;component/ImagesWPF/PlanningUnits32.png" ShowIconOnTitleBar="True"
    WindowStartupLocation="CenterOwner"
    ShowMinButton="False"
    ShowMaxRestoreButton="True"
    ShowCloseButton="True"
    ResizeMode="CanResizeWithGrip"
    >
    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>
    <Border Margin="10" Padding="10" Background="LightGray" BorderBrush="Black" BorderThickness="3">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="10, 10, 10, 5" Background="LightGray" Height="Auto" >
                <TextBlock Margin="5, 5, 5, 0" DockPanel.Dock="Top" Style="{DynamicResource Esri_TextBlockRegular}">Specify the Output Spatial Reference</TextBlock>
                <DockPanel Background="PaleGreen" DockPanel.Dock="Top" LastChildFill="True" Margin="5,5,5,5">
                    <RadioButton GroupName="SR" IsEnabled="{Binding SRMapIsEnabled}" Command="{Binding CmdSRMap}" IsChecked="{Binding SRMapIsChecked}" Margin="10, 5" VerticalContentAlignment="Center" DockPanel.Dock="Left">From Map:</RadioButton>
                    <TextBlock Margin="10, 5" Text="{Binding MapSRName}" VerticalAlignment="Center"></TextBlock>
                </DockPanel>
                <DockPanel Background="PaleGoldenrod" DockPanel.Dock="Top" LastChildFill="True" Margin="5,5,5,5">
                    <RadioButton GroupName="SR" IsEnabled="{Binding SRLayerIsEnabled}" Command="{Binding CmdSRLayer}" IsChecked="{Binding SRLayerIsChecked}" Margin="10, 5" VerticalContentAlignment="Center" DockPanel.Dock="Left">From Layers: </RadioButton>
                    <ComboBox Margin="10, 5" ItemsSource="{Binding LayerSRList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedLayerSR}" ></ComboBox>
                </DockPanel>
                <DockPanel Background="LightBlue" DockPanel.Dock="Bottom" LastChildFill="True" Margin="5,5,5,5">
                    <RadioButton GroupName="SR" IsEnabled="{Binding SRUserIsEnabled}" Command="{Binding CmdSRUser}" IsChecked="{Binding SRUserIsChecked}" Margin="10, 5" VerticalContentAlignment="Center" DockPanel.Dock="Left">User-specified: </RadioButton>
                    <Button Margin="5" DockPanel.Dock="Left" IsEnabled="False" Command="{Binding CmdSelectSpatialReference}">
                        <Image Margin="2" Source="pack://application:,,,/PRZTools;component/ImagesWPF/CoordinateSystem16.png" Stretch="None" />
                        <Button.ToolTip>
                            <TextBlock>
                                bla bla bla
                                <LineBreak />
                                ble ble ble ble
                            </TextBlock>
                        </Button.ToolTip>
                    </Button>
                    <TextBlock Margin="10, 5" Text="{Binding UserSRName}" VerticalAlignment="Center"></TextBlock>
                </DockPanel>

            </DockPanel>


            <DockPanel Grid.Row="1">
                
            </DockPanel>
            
            <DockPanel Grid.Row="2" Background="LightGray" Height="Auto" Margin="10, 10" LastChildFill="True">
                <Button Style="{DynamicResource Esri_Button}" Command="{Binding CmdBuildPlanningUnits}" Background="Maroon" Foreground="Yellow" Height="25" Margin="5">BUILD PLANNING UNIT FEATURE CLASS</Button>
            </DockPanel>

            <DockPanel Grid.Row="3" Margin="10, 5, 10, 5" LastChildFill="True" Background="LightGray" Height="Auto">
                <ScrollViewer Margin="10, 10, 10, 10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="{Binding TestInfo}" Background="PaleGoldenrod" FontFamily="Courier New">
                        </TextBlock>
                    </DockPanel>
                </ScrollViewer>
            </DockPanel>
            
            <!--<StackPanel Grid.Row="1" Orientation="Horizontal" Background="LightGray" Margin="10, 5" Height="Auto">
                <Button Command="{Binding CmdInitializeCurrentWorkspace}" Style="{DynamicResource Esri_Button}">Initialize</Button>
                <Button Command="{Binding CmdResetCurrentWorkspace}" Style="{DynamicResource Esri_Button}">Reset</Button>
                <Button Command="{Binding CmdOpenCurrentWorkspace}" Style="{DynamicResource Esri_Button}">Explorer</Button>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Background="LightGray" Margin="10, 5" Height="Auto">
                <TextBlock VerticalAlignment="Center" Style="{DynamicResource Esri_TextBlockRegular}">Workspace Content Viewer</TextBlock>
                <RadioButton GroupName="WSContents" Command="{Binding CmdDisplayContent}" CommandParameter="DIR" IsChecked="{Binding FolderChecked}" Margin="10, 5">Folder</RadioButton>
                <RadioButton GroupName="WSContents" Command="{Binding CmdDisplayContent}" CommandParameter="GDB" IsChecked="{Binding GeodatabaseChecked}" Margin="10, 5">Geodatabase</RadioButton>
                <RadioButton GroupName="WSContents" Command="{Binding CmdDisplayContent}" CommandParameter="LOG" IsChecked="{Binding LogChecked}" Margin="10, 5">Log</RadioButton>
            </StackPanel>

            <ScrollViewer Grid.Row="3" Margin="10, 5, 10, 10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="{Binding WorkspaceContents}" Background="PaleGoldenrod" FontFamily="Courier New">
                    </TextBlock>
                </DockPanel>
            </ScrollViewer>-->
        </Grid>
    </Border>


