<controls:ProWindow
    x:Class="NCC.PRZTools.PlanningUnits"
    x:Name="PlanningUnitsDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    mc:Ignorable="d"
    Title="Planning Unit Generator"
    Height="650" Width="500" MinHeight="650" MinWidth="500"
    Icon="pack://application:,,,/PRZTools;component/ImagesWPF/PlanningUnits32.png" ShowIconOnTitleBar="True"
    WindowStartupLocation="CenterOwner"
    ShowMinButton="True" ShowMaxRestoreButton="True" ShowCloseButton="True" ShowTitleBar="True"
    ResizeMode="CanResizeWithGrip"
    >
    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>
    <Border Margin="10" Padding="10" Background="LightGray" BorderBrush="Black" BorderThickness="3">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="10, 10, 10, 5" Background="LightGray" Height="Auto" >
                <TextBlock Margin="5, 5, 5, 0" DockPanel.Dock="Top" Style="{DynamicResource Esri_TextBlockRegular}">Specify the Output Spatial Reference</TextBlock>
                <DockPanel Background="PaleGreen" DockPanel.Dock="Top" LastChildFill="True" Margin="5,5,5,5">
                    <RadioButton GroupName="SR" IsEnabled="{Binding SRMapIsEnabled}" Command="{Binding CmdSRMap}" IsChecked="{Binding SRMapIsChecked}" Margin="10, 5" VerticalContentAlignment="Center" DockPanel.Dock="Left">From Map:</RadioButton>
                    <TextBlock Margin="10, 5" Text="{Binding MapSRName}" VerticalAlignment="Center"></TextBlock>
                </DockPanel>
                <DockPanel Background="PaleGoldenrod" DockPanel.Dock="Top" LastChildFill="True" Margin="5,5,5,5">
                    <RadioButton GroupName="SR" IsEnabled="{Binding SRLayerIsEnabled}" Command="{Binding CmdSRLayer}" IsChecked="{Binding SRLayerIsChecked}" Margin="10, 5" VerticalContentAlignment="Center" DockPanel.Dock="Left">From Layers: </RadioButton>
                    <ComboBox Margin="10, 5" ItemsSource="{Binding LayerSRList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedLayerSR}" ></ComboBox>
                </DockPanel>
                <DockPanel Background="LightBlue" DockPanel.Dock="Bottom" LastChildFill="True" Margin="5,5,5,5">
                    <RadioButton GroupName="SR" IsEnabled="{Binding SRUserIsEnabled}" Command="{Binding CmdSRUser}" IsChecked="{Binding SRUserIsChecked}" Margin="10, 5" VerticalContentAlignment="Center" DockPanel.Dock="Left">User-specified: </RadioButton>
                    <Button Margin="5" DockPanel.Dock="Left" IsEnabled="False" Command="{Binding CmdSelectSpatialReference}">
                        <Image Margin="2" Source="pack://application:,,,/PRZTools;component/ImagesWPF/CoordinateSystem16.png" Stretch="None" />
                        <Button.ToolTip>
                            <TextBlock>
                                bla bla bla
                                <LineBreak />
                                ble ble ble ble
                            </TextBlock>
                        </Button.ToolTip>
                    </Button>
                    <TextBlock Margin="10, 5" Text="{Binding UserSRName}" VerticalAlignment="Center"></TextBlock>
                </DockPanel>

            </DockPanel>

            <DockPanel Grid.Row="1" Margin="5" Background="LightSeaGreen">

                <DockPanel DockPanel.Dock="Top" Margin="5" Background="LightGray" Height="Auto" LastChildFill="True">
                    <RadioButton IsEnabled="{Binding GraphicsLayerIsEnabled}" IsChecked="{Binding GraphicsLayerIsChecked}" VerticalContentAlignment="Center" GroupName="StudyAreaSource" Margin="5" VerticalAlignment="Center" DockPanel.Dock="Left">Graphics Layers with Poly Selections: </RadioButton>
                    <ComboBox Margin="5" ItemsSource="{Binding GraphicsLayerList}" SelectedItem="{Binding SelectedGraphicsLayer}"></ComboBox>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="5" Background="LightGray" Height="Auto" LastChildFill="True">
                    <RadioButton IsEnabled="{Binding FeatureLayerIsEnabled}" IsChecked="{Binding FeatureLayerIsChecked}" VerticalContentAlignment="Center" GroupName="StudyAreaSource" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="5">Poly Feature Layers with Selections:</RadioButton>
                    <ComboBox Margin="5" ItemsSource="{Binding FeatureLayerList}" SelectedItem="{Binding SelectedFeatureLayer}"></ComboBox>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="5" Background="LightGray" Height="Auto" LastChildFill="False">
                    <TextBlock VerticalAlignment="Center" DockPanel.Dock="Left" Margin="5">Apply Buffer to Features/Graphics:</TextBlock>
                    <TextBox Text="{Binding BufferValue}" Margin="5" Width="60"></TextBox>
                    <RadioButton Margin="5" IsChecked="{Binding BufferUnitMetersIsChecked}" VerticalAlignment="Center" VerticalContentAlignment="Center" GroupName="BufferUnits">m</RadioButton>
                    <RadioButton Margin="5" IsChecked="{Binding BufferUnitKilometersIsChecked}" VerticalAlignment="Center" VerticalContentAlignment="Center" GroupName="BufferUnits">km</RadioButton>
                </DockPanel>
            </DockPanel>

            <DockPanel Grid.Row="2" Margin="5">
                <DockPanel DockPanel.Dock="Top" Margin="5" Background="Khaki" Height="Auto" LastChildFill="True">
                    <RadioButton DockPanel.Dock="Left" Margin="5" VerticalAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" GroupName="FCType">Use Existing Feature Layer:</RadioButton>
                    <ComboBox Margin="5" ItemsSource="{Binding GraphicsLayerList}" SelectedItem="{Binding SelectedGraphicsLayer}"></ComboBox>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="5,5,5,0" Background="Khaki" Height="Auto" LastChildFill="True">
                    <RadioButton DockPanel.Dock="Left" Margin="5" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" IsEnabled="True" GroupName="FCType">Use Grid:</RadioButton>
                    <ComboBox HorizontalContentAlignment="Center" DockPanel.Dock="Left" Width="70" Margin="5" ItemsSource="{Binding GridTypeList}" SelectedItem="{Binding SelectedGridType}"></ComboBox>
                    <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">Tile Area</TextBlock>
                    <TextBox DockPanel.Dock="Left" Text="{Binding TileArea}" Margin="5" Width="40"></TextBox>
                    <RadioButton Margin="0,5,5,5" IsChecked="{Binding TileAreaMIsSelected}" VerticalAlignment="Center" VerticalContentAlignment="Center" GroupName="TileUnits">m&#x00B2;</RadioButton>
                    <RadioButton Margin="0,5,5,5" IsChecked="{Binding TileAreaAcIsSelected}" VerticalAlignment="Center" VerticalContentAlignment="Center" GroupName="TileUnits">ac</RadioButton>
                    <RadioButton Margin="0,5,5,5" IsChecked="{Binding TileAreaHaIsSelected}" VerticalAlignment="Center" VerticalContentAlignment="Center" GroupName="TileUnits">ha</RadioButton>
                    <RadioButton Margin="0,5,5,5" IsChecked="{Binding TileAreaKmIsSelected}" VerticalAlignment="Center" VerticalContentAlignment="Center" GroupName="TileUnits">km&#x00B2;</RadioButton>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="5,0,5,5" Background="Khaki" Height="Auto" LastChildFill="False">
                    <TextBlock Margin="5" VerticalAlignment="Center">Align grid to these XY coordinates:</TextBlock>
                    <TextBlock VerticalAlignment="Center">X: </TextBlock>
                    <TextBox DockPanel.Dock="Left" Text="{Binding GridAlign_X}" Margin="5" Width="80"></TextBox>
                    <TextBlock VerticalAlignment="Center">Y:</TextBlock>
                    <TextBox DockPanel.Dock="Left" Text="{Binding GridAlign_Y}" Margin="5" Width="90"></TextBox>
                </DockPanel>
            </DockPanel>

            <DockPanel Grid.Row="3" Background="LightGray" Height="Auto" Margin="10, 10" LastChildFill="True">
                <Button IsEnabled="True" Style="{DynamicResource Esri_Button}" Command="{Binding CmdBuildPlanningUnits}" Background="YellowGreen" Foreground="Black" Height="25" Margin="5">BUILD PLANNING UNIT FEATURE CLASS</Button>
                <!--<Button IsEnabled="{Binding BuildIsEnabled}" Style="{DynamicResource Esri_Button}" Command="{Binding CmdBuildPlanningUnits}" Background="YellowGreen" Foreground="Black" Height="25" Margin="5">BUILD PLANNING UNIT FEATURE CLASS</Button>-->
            </DockPanel>

            <ScrollViewer Grid.Row="4" Margin="5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DockPanel LastChildFill="True" Background="LightGray" Height="Auto">
                    <ProgressBar Margin="5" Height="12" DockPanel.Dock="Top" Minimum="{Binding BarMin}" Maximum="{Binding BarMax}" Value="{Binding BarValue}" />
                    <TextBlock Margin="5" Text="{Binding BarMessage}" Background="PaleGoldenrod" FontFamily="Courier New"></TextBlock>
                </DockPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</controls:ProWindow>
